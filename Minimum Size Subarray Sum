public class Solution
{
public static void minSubarraySum(int target,int[] arr)
{
  int left = 0;
  int right = 0;
  int sum = 0;
  int minLen = Integer.MAX_VALUE;
  while(right < arr.length)
  {
     sum += arr[right];
     while(sum >= target)
     {
        minLen = Math.min(minLen,right-left+1);
        sum -= arr[left];
        left++;
     } 
    right++;
  }
 return minLen == Integer.MAX_VALUE ? 0 : minLen;
}
}
